# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                         controllers.UserController.index

# Create a user
POST    /user                     controllers.UserController.addUser()

# Get a user by his id
GET     /user/:id                 controllers.UserController.getUser(id : Long)

# Get all persons
GET     /users                    controllers.UserController.getUsers()

# Delete a user by his id
DELETE  /user/:id                 controllers.UserController.deleteUser(id: Long)




#Routes Products -----------------------------------------------------------------------------------------
GET    /product                      controllers.ProductController.product()

POST   /addProduct                   controllers.ProductController.addProduct()

# Get all Product
GET     /products                    controllers.ProductController.getProducts()

# Get a user by his id
GET     /products/:id                controllers.ProductController.getProduct(id : Long)

# ----------------------------------------------------------------------------------------------------------

# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /login                      controllers.UserController.login

POST    /login                      controllers.UserController.login

POST    /register                   controllers.UserController.register

POST    /register/addUser           controllers.UserController.addUser

